= form_for(current_user, html:{class: 'container user-new'}) do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Edit Profile
        .user-name_image.row

          .user-name.col-md-10
            = f.text_field :name, placeholder: "Username"

          .user-image.col-md-2
            %button.btn.btn-primary Change image
            %input{type: "file"}/

          .user-email.col-md-10
            = f.email_field :email, placeholder: "E-Mail"

          .user-email.col-md-10
            = f.password_field :password, placeholder: "Password"

      .col-md-12
        %h4 Member of
        .user-user-member.row
          .user-name.col-md-12
            = f.text_field :member, placeholder: "Member", type: "text"
        %h4 Profile
        .user-user-profile.row
          .user-name.col-md-12
            = f.text_area :profile, cols: "30", rows: "4", placeholder: "Profile"
        %h4 Works
        .user-name_image.row
          .user-name.col-md-12
            = f.text_area :works, cols: "30", rows: "4", placeholder: "Works"

    .row.text-center.user-btn
      = f.submit "Save", class: "btn btn-lg btn-primary btn-block", type: "submit"
